{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2015"
  },
  "include": ["./src/**/*"]
}
